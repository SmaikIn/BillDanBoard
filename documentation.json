          },
          "avatar": {
            "type": "string",
            "description": "Ссылка на аватар пользователя."
          },
          "birthday": {
            "type": "string",
            "description": "День рождения пользователя"
          },
          "created_at": {
            "type": "string",
            "description": "Дата создания пользователя"
          }
        },
