{
  "openapi": "3.1.0",
  "info": {
    "title": "Диплом API",
    "description": "",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1/api",
      "description": "local-1"
    },
    {
      "url": "http://192.168.11.62:80/api",
      "description": "local-1"
    }
  ],
  "securitySchemes": {
    "BearerAuth": {
      "type": "http",
      "scheme": "bearer",
      "bearerFormat": "JWT"
    }
  },
  "paths": {
    "/auth/me": {
      "get": {
        "tags": [
          "Авторизация"
        ],
        "summary": "Получение информации о текущем пользователе",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Успешное получение информации о пользователе",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResource"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedResponse"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Авторизация"
        ],
        "summary": "Авторизация пользователя",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успешная аутентификация",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResource"
                }
              }
            }
          },
          "400": {
            "description": "Эти учетные данные не соответствуют нашим записям.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JsonApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Авторизация"
        ],
        "summary": "Выход текущего пользователя из системы",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Успешный выход пользователя из системы"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedResponse"
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": [
          "Авторизация"
        ],
        "summary": "Обновить токен аутентификации",
        "description": "Обновляет токен аутентификации для пользователя.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResource"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedResponse"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "EmailParam": {
        "name": "email",
        "in": "query",
        "description": "Email пользователя",
        "required": true,
        "schema": {
          "type": "string",
          "format": "email"
        },
        "AuthorizationHeader": {
          "name": "Authorization",
          "in": "header",
          "description": "Токен авторизации пользователя в формате Bearer <token>",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      }
    },
    "responses": {
      "UnauthorizedResponse": {
        "description": "Неавторизованный доступ",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/JsonApiResponse"
            }
          }
        }
      }
    },
    "schemas": {
      "UserResource": {
        "type": "object",
        "properties": {
          "id": {
